<?xml version="1.0" encoding="UTF-8"?>
<beans

	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	
	<!-- injection de dependance via le constructeur  -->
	
	<bean id="address" class="org.eclipse.model.Address">
		<constructor-arg value="paradis"></constructor-arg>
		<constructor-arg value="13015"></constructor-arg>
		<constructor-arg value="Marseille"></constructor-arg>
	</bean>
	
	<bean id="per" class="org.eclipse.model.Person">
		<constructor-arg value="31" type="int"></constructor-arg>
		<constructor-arg value="Guillaume" type="String"></constructor-arg>
		<constructor-arg value="WELLE" type="String"></constructor-arg>
		<constructor-arg><ref bean="address"/></constructor-arg>
	</bean>

	
	

</beans>